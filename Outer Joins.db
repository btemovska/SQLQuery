----OUTER JOIN -- linking tables and finding out not only the rows that match but also the rows that don't match
    -- LEFT OUTER JOIN - if you want all rows from the first table and any matching rows from the second table use LEFT OUTER JOIN
    -- RIGHT OUTER JOIN - if you want all rows from the second table and any matching rows from the first table use RIGH OUTER JOIN

SELECT * FROM Recipe_Classes LEFT OUTER JOIN Recipes ON Recipe_Classes.RecipeClassID=Recipes.RecipeClassID;
SELECT * FROM Recipe_Classes LEFT OUTER JOIN Recipes WHERE Recipe_Classes.RecipeClassID=REcipes.RecipeClassID; --but doesn't show all values

SELECT * FROM Recipe_Classes LEFT OUTER JOIN Recipes ON Recipe_Classes.RecipeClassID=Recipes.RecipeClassID WHERE Recipes.RecipeClassID IS NULL;
SELECT * FROM Recipe_Classes LEFT OUTER JOIN Recipes USING (RecipeClassID) WHERE Recipes.RecipeID IS NULL; --or this way
SELECT * FROM Recipe_Classes NATURAL LEFT OUTER JOIN Recipes WHERE Recipes.RecipeID IS NULL; -- or this way

--embeded JOINs within JOINs (linking 3 or 4 or more tables)
Select Recipe_Classes.RecipeClassDescription, Recipes.RecipeTitle, Recipes.Preparation, Ingredients.IngredientName,
Recipe_Ingredients.RecipeSeqNo, Recipe_Ingredients.Amount, Measurements.MeasurementDescription
FROM (((Recipe_Classes
LEFT OUTER JOIN Recipes ON Recipe_Classes.RecipeClassID=Recipes.RecipeClassID)
INNER JOIN Recipe_Ingredients ON Recipes.RecipeID=Recipe_Ingredients.RecipeID)
INNER JOIN Ingredients ON Ingredients.IngredientID=Recipe_Ingredients.IngredientID)
INNER JOIN Measurements ON Measurements.MeasureAmountID=Recipe_Ingredients.MeasureAmountID
ORDER BY RecipeTitle, RecipeSeqNo;

SELECT Recipe_Classes.RecipeClassDescription, Recipes.RecipeTitle, Recipes.Preparation, Ingredients.IngredientName,
Recipe_Ingredients.RecipeSeqNo, Recipe_Ingredients.Amount, Measurements.MeasurementDescription
FROM (((Recipe_Classes
LEFT OUTER JOIN Recipes ON Recipe_Classes.RecipeClassID=Recipes.RecipeClassID)
LEFT OUTER JOIN Recipe_Ingredients ON Recipes.RecipeID=Recipe_Ingredients.RecipeID)
INNER JOIN Ingredients ON Ingredients.IngredientID=Recipe_Ingredients.IngredientID)
INNER JOIN Measurements ON Measurements.MeasureAmountID=Recipe_Ingredients.MeasureAmountID
ORDER BY RecipeTitle, RecipeSeqNo;

---FULL OUTER JOIN - neither left or right, it is both(NOTE this is not supported also is not RIGHT OUTER JOINs)
SELECT Recipe_Classes.RecipeClassDescription, Recipes.RecipeTitle, Recipes.Preparation, Ingredients.IngredientName,
Recipe_Ingredients.RecipeSeqNo, Recipe_Ingredients.Amount, Measurements.MeasurementDescription
FROM (((Recipe_Classes
FULL OUTER JOIN Recipes ON Recipe_Classes.RecipeClassID=Recipes.RecipeClassID)
LEFT OUTER JOIN Recipe_Ingredients ON Recipes.RecipeID=Recipe_Ingredients.RecipeID)
INNER JOIN Measurements ON Measurement.MeasureAmountID = Recipe_Ingredients.MeasureAmountID)
FULL OUTER JOIN Ingredients ON Ingredients.IngredientID=Recipe_Ingredients.IngredientID
ORDER BY RecipeTitle, RecipeSeqNo;  -- NOTE this is not supported in thei SQL

-- FULL OUTER JOIN on Non-Key Values  - not supported
SELECT (Students.StudFirstName || ' ' || Students.StudLastName) AS StudFullName, 
(Staff.StfFirstName || ' ' || Staff.StfLastName) AS StfFullName FROM Students
FULL OUTER JOIN Staff ON Students.StudFirstName=Staff.StfFirstName;

--Sample Statements
SELECT Products.ProductNumber, Products.ProductName FROM Products
LEFT OUTER JOIN Order_Details ON Products.ProductNumber=Order_Details.ProductNumber
WHERE Order_Details.OrderNumber IS NULL;

SELECT Customers.CustFirstName || ' ' || Customers.CustLastName AS CustFullName,
RD.OrderDate, RD.ProductName, RD.QuantityOrdered, RD.QuotedPrice FROM Customers
LEFT OUTER JOIN (SELECT Orders.CustomerID, Orders.OrderDate, Products.ProductName, Order_Details.QuantityOrdered, Order_Details.QuotedPrice
FROM ((Orders INNER JOIN Order_Details ON Orders.OrderNumber=Order_Details.OrderNumber)
INNER JOIN Products ON Order_Details.ProductNumber=Products.ProductNumber)
INNER JOIN Categories ON Categories.CategoryID=Products.CategoryID
WHERE Categories.CategoryDescription='Bikes') AS RD ON Customers.CustomerID = RD.CustomerID;

SELECT Entertainers.EntertainerID, Entertainers.EntStageName FROM Entertainers
LEFT OUTER JOIN Engagements ON Entertainers.EntertainerID=Engagements.EntertainerID
WHERE Engagements.EngagementNumber IS NULL;

SELECT Staff.StfFirstName, Staff.StfLastname FROM Staff
LEFT OUTER JOIN Faculty_Classes ON Staff.StaffID=Faculty_Classes.StaffID
WHERE Faculty_Classes.ClassID IS NULL;

SELECT * FROM Tournaments LEFT OUTER JOIN Tourney_Matches 
ON Tournaments.TourneyID=Tourney_Matches.TourneyID WHERE Tourney_Matches.MatchID IS NULL;

SELECT Bowlers.BowlerLastName || ' ' || Bowlers.BowlerFirstName AS BowlerName, TI.TournayDate, TI.TourneyLocation, TI.MatchID, TI.RawScore 
FROM Bowlers LEFT OUTER JOIN 
(SELECT Tournaments.TourneyDate, Tournaments.TourneyLocation, Bowlers_Scores.MatchID, Bowlers_Scores.BowlerID, Bowlers_Scores.RawScore
FROM (Bowler_Scores INNER JOIN Tourney_Matches ON Bowler_Scores.MatchID)
INNER JOIN Tournaments ON Tournaments.TourneyID=Tourney_Matches.TourneyID
WHERE Bowler_Scores.RawScore>180) AS TI ON Bowlers.BowlerID = IT.BowlerID;










